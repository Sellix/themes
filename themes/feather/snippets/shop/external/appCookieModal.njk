{% if global.cookiePolicy.enabled %}
  <div id="sellix-cookie-modal"></div>
  <script type="text/javascript" src="{{ 'cookie-modal.js' | asset_url }}" charset="UTF-8"></script>
  <link rel="stylesheet" href="{{ 'cookie-modal.css' | asset_url }}" />
  <script type="text/javascript">
    (function (document, window, jQuery, React, ReactDOM) {
      jQuery(document).ready(() => {
        ReactDOM.render(
          React.createElement(window.CookieModal, {
            shop: '{{ global.common.shopInfo.shop.name }}',
            googleAnalyticsTrackingId: '{{ global.common.shopInfo.shop.google_analytics_tracking_id }}',
          }),
          document.querySelector("#sellix-cookie-modal"),
        );
      });
    })(document, window, jQuery, React, ReactDOM);
  </script>
{% endif %}
