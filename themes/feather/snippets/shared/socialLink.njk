{% set id = uid() %}
{% set class = args.class %}
{% set link = args.link %}
{% set iconClass = args.icon_class %}
{% set colors = themeProperties.current_colors %}
{% set properties = args.properties %}

{% set fontSize = safe_get(properties.font_size, 16) %}
{% set fontColor = safe_get(properties.font_color, 'contrast_light_font_color') %}

{% set localClass = id %}

<style>
  .{{ localClass }} {
    font-size: {{ fontSize }}px;
    color: {{ colors[fontColor] }};
  }
</style>

<a href="{{link}}" target="_blank" class="{{ localClass }} {{class}}">
  <i class="{{ iconClass }}"></i>
</a>
