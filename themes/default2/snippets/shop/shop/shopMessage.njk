{% set shop = global.common.shopInfo.shop %}
{% set containerSelector = args.container_selector %}

{% if shop.popup_message %}
  <style>
    .sellix-toastify.t-shop-message {
      position: absolute!important;
      right: 1rem!important;
      top: 5rem!important;
      word-break: break-word;
      background: var(--backgroundColor);
      color: var(--lightFontColor);
      border: 1px solid var(--borderColor);
      border-radius: 3px;
      box-shadow: none;
      max-width: 350px;
      width: 100%;
      max-height: 290px;
      padding: 1rem;
    }
    @media (max-width: 768px) {
      .sellix-toastify.t-shop-message {
        max-width: calc(100% - 3rem);
        right: 1.5rem!important;
      }
    }
    .t-shop-message .t-content {
      word-break: break-word;
      white-space: pre-line;
    }
    .t-shop-message .t-header {
      margin-bottom: 1rem;
      font-weight: 500;
      line-height: 1;
      font-size: 1rem;
    }
    .t-shop-message .t-close {
      position: absolute;
      top: 1rem;
      right: 1rem;
    }
  </style>

  <script>
    $(document).ready(() => {
      const msg = `{{ shop.popup_message }}`;
      const hash = btoa(encodeURIComponent(msg));
      if (!localStorage.getItem(hash)) {
        setTimeout(() => {
          window._shopMessage = Toastify({
            selector: '{{ containerSelector }}',
            duration: 0,
            className: `sellix-toastify t-shop-message`,
            node: $(`
              <div>
                <div class="t-close" onClick="window._shopMessage.removeElement(window._shopMessage.toastElement)">
                  <i class="fas fa-times"></i>
                </div>
                <div class="t-header">Message from {{ global.common.shopInfo.shop.name }}</div>
                <div class="t-content">${msg}</div>
              </div>
            `)[0],
            gravity: "top",
            position: "right",
            callback() {
              localStorage.setItem(hash, 'true');
              delete window._shopMessage;
            },
          }).showToast();
        }, 2000);
      }
    });
  </script>
{% endif %}
