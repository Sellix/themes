{% set id = uid() %}
{% set properties = args.properties %}

{% set rootClass = ['multi-columns-', id, '__column-item-image'] | join %}

<style>
  .{{ rootClass }} {
    width: {{ properties.size }};
    height: {{ properties.size }};
  }
</style>

<div>
  <img class="{{ rootClass }}" src='{{properties.url | asset_url}}' alt=''>
</div>
