{% set id = uid() %}
{% set properties = args.properties %}

{% set colors = themeProperties.current_colors %}

{% set backgroundColor = safe_get(properties.background_color, 'dark_font_color') %}
{% set labelColor = properties.label_color %}
{% set label = properties.label %}
{% set url = properties.url %}

{% set rootClass = ['multi-columns-', id, '__column-item-button'] | join %}

<style>
  .{{ rootClass }} {
    background-color: {{ colors[backgroundColor] }};
    padding: 14px 20px;
    border-radius: 18px;
  }

  .{{ rootClass }} a {
    display: flex;
    align-items: center;
    color: {{ colors[labelColor] }};
    text-decoration: none;
    font-family: 'Inter', sans-serif;
    font-style: normal;
    font-weight: 600;
    font-size: 14px;
    line-height: 17px;
  }

  .{{ rootClass }} a span {
    margin-right: 8px;
  }
</style>

<div class="{{ rootClass }}">
  <a href="{{ url }}">
    <span>{{ label }}</span>
    {% render_snippet 'Arrow right' %}
  </a>
</div>
