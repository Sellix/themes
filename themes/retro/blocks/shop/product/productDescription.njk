{% set id = uid() %}
{% set product = global.common.productInfo.product %}
{% set invoice = global.common.invoiceInfo.invoice %}
{% set type = properties.type %}

{% if type | lower == 'plain_text' %}
  {% render_snippet 'Product: Description', product=product, invoice=invoice, properties=properties, collapsable=false %}
{% elif type | lower == 'collapsable' %}
  {% render_snippet 'Product: Description', product=product, invoice=invoice, properties=properties, collapsable=true %}
{% endif %}