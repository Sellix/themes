{% set id = uid() %}
{% set group = args.group %}
{% set isPlaceholder = not group.image_name %}
{% set image = cdn_link(group.cloudflare_image_id, 'shopItem') %}
{% set colors = themeProperties.current_colors %}
{% set cardsProps = themeProperties.cards %}

<div
  id="sellix-card-container-{{id}}"
  class="sellix-card-container"
  data-group-id="{{group.uniqid}}"
  style="border: {{ "1px solid var(--borderColor)" if cardsProps.product_card_show_border else "none" }};border-top-left-radius: 0.5rem;    border-top-right-radius: 0.5rem;}"
>
  <div class="sellix-card-badge">Group</div>
  <div
    class="sellix-card unselectable"
    style="background: {{ colors[cardsProps.product_card_background_color] }};"
  >
    <div class="sellix-card-image {{'placeholder' if isPlaceholder else ''}}">
      {% if isPlaceholder %}
        <i class="fa-light fa-layer-group"></i>
      {% else %}
        <img src="{{image}}" alt="{{group.title}}" loading="lazy" />
      {% endif %}
    </div>

    <div class="sellix-card-info">
      <div
        class="sellix-card-title {{'justify-content-center text-center' if args.centerGroup else ''}}"
        style="font-size: {{ cardsProps.product_card_title_font_size }}px; font-weight: {{ cardsProps.product_card_title_font_weight }}; line-height: {{ cardsProps.product_card_title_line_height }}%; justify-content: space-between;"
      >
        {{group.title}}
      </div>

      <div
        class="sellix-group-card-description"
        style="font-size: {{ cardsProps.product_card_description_font_size }}px; font-weight: {{ cardsProps.product_card_description_font_weight }};justify-content: space-between;display: block!important;"
      >
        <span>
          {% if group.minPriceItem %}
            <div class="sellix-group-description-info" style="justify-content: space-between;">
              <span>Starting at: </span>

              <span
                style="font-size: {{ cardsProps.product_card_price_font_size }}px; font-weight: {{ cardsProps.product_card_price_font_weight }};"
              >
                {% render_snippet 'Price', currency=group.minPriceItem.currency, price=group.minPriceItem.price_display %}
              </span>
            </div>
          {% else %}
            <span>Out of Products</span>
          {% endif %}

        </span>
        <div class="linkbottone">
          <a style="padding: 15px 32px;    display: block;    margin: 20px; text-align: center; font-size: 16px; font-weight: 900;  cursor: pointer; border-radius: 5px 5px 5px 5px;">Products list</a>
          </div>
      </div>
    </div>
  </div>
</div>

<script type='application/javascript'>
  $(document).ready(function () {
    $('#sellix-card-container-{{id}}').on('click', function () {
      console.log('Click!!!');
      const groupId = $(this).data('group-id');
      const items = __RENDER_CONTEXT__.common.shopInfo.items;
      const group = items.find(({uniqid}) => uniqid === groupId);

      if (group && group.products_bound.length) {
        $(document).trigger('SellixSetActiveModalGroup', { groupId });
        jQuery('#group-card-modal').modal({
          modalClass: '',
          blockerClass: '',
          showClose: false,
        });
      }
    });

    {% if global.request.type === 'group' and global.request.options.itemId === group.uniqid %}
      setTimeout(function() {
        $('#sellix-card-container-{{id}}').click();
      }, 0);
    {% endif %}
  });
</script>